<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.event.presentation.view.EventFragment">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_marginTop="@dimen/large_grid"
        android:contentDescription="@string/content_description_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tm_logo" />

    <TextView
        android:id="@+id/tvSearchEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_grid"
        android:layout_marginTop="@dimen/large_grid"
        android:fontFamily="@font/inter_tight_semi_bold"
        android:text="@string/search_title"
        android:textColor="@color/black"
        android:textSize="@dimen/default_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_grid"
        android:layout_marginTop="@dimen/small_grid"
        android:layout_marginEnd="@dimen/medium_grid"
        app:boxBackgroundColor="@color/light_blue"
        app:boxCornerRadiusBottomEnd="@dimen/medium_grid"
        app:boxCornerRadiusBottomStart="@dimen/medium_grid"
        app:boxCornerRadiusTopEnd="@dimen/medium_grid"
        app:boxCornerRadiusTopStart="@dimen/medium_grid"
        app:boxStrokeWidth="@dimen/zero_grid"
        app:endIconTintMode="src_over"
        app:hintEnabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSearchEvents"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="@color/gray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_tight_regular"
            android:hint="@string/search_hint"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_grid"
        android:orientation="vertical"
        tools:listitem="@layout/item_event"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>